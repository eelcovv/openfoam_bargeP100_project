controlOnNext
{
  type abort;
  functionObjectLibs ("libjobControl.so" );
  action nextWrite;
  fileName "snapshot";
}
killNow
{
  type abort;
  functionObjectLibs ( "libjobControl.so" );
  action noWriteNow;
  fileName "killrun";
}
suspendNow
{
  type abort;
  functionObjectLibs ( "libjobControl.so" );
  action writeNow;
  fileName "suspend";
}
