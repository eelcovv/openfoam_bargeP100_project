# Activate OpenFOAM shell when entering this directory
if [ -x "$(command -v of-shell)" ]; then
  eval "$(of-shell)"
  echo "Activated OpenFOAM environment for $(basename "$PWD")"
else
  echo "Could not "find 'of-shell' command. Please ensure OpenFOAM is installed and 'of-shell' is in your PATH."
fi